{
  "name": "mf-mono",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">= 14.15",
    "yarn": ">= 1.22"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "tools/*"
    ]
  },
  "browserslist": [
    "extends @mf/browserslist-config-mf"
  ],
  "scripts": {
    "preinstall": "node -e \"if(process.env.npm_execpath.indexOf('yarn') === -1) throw new Error('Use yarn to install, instead of npm')\"",
    "boot": "lerna bootstrap --reject-cycles",
    "setup": "lerna bootstrap && lerna run build && lerna clean --yes && lerna bootstrap",
    "build": "lerna run build",
    "verify": "lerna run lint && lerna run test && lerna run typescript",
    "prettier": "prettier --config prettier.config.js --write \"packages/**/*.{ts,tsx}\"",
    "test": "lerna run test",
    "test:parallel": "lerna run test --parallel",
    "coverage": "yarn test --coverage",
    "start": "lerna run start --parallel",
    "merge-coverage-report-jsons": "istanbul-merge --out coverage-temp/coverage-final.json packages/data/coverage/coverage-final.json packages/header/coverage/coverage-final.json",
    "generate-coverage-all-packages": "nyc report --reporter=html --reporter=text --reporter=lcov --reporter=clover --report-dir=coverage --temp-dir=coverage-temp",
    "merge-html-reports": "cat packages/header/coverage/index-pretty.html packages/data/coverage/index-pretty.html > coverage/index-pretty.html",
    "posttest": "yarn merge-coverage-report-jsons && yarn generate-coverage-all-packages && yarn merge-html-reports"
  },
  "dependencies": {
    "babel-plugin-istanbul": "^6.1.1",
    "core-js": "3.8.2",
    "istanbul-merge": "^2.0.0",
    "nyc": "^15.1.0",
    "react": "17.0.1",
    "react-dom": "17.0.1"
  },
  "devDependencies": {
    "@babel/core": "7.12.10",
    "@babel/eslint-parser": "7.12.1",
    "@mf/browserslist-config-mf": "file:tools/browserslist-config-mf",
    "@mf/config": "file:tools/config",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^12.1.2",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.3.0",
    "chalk": "4.1.0",
    "concurrently": "^5.3.0",
    "dayjs": "^1.8.36",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.2.0",
    "html-webpack-tags-plugin": "2.0.17",
    "jest": "^26.4.2",
    "jest-html-reporter": "^3.10.2",
    "lerna": "3.22.1",
    "webpack": "5.11.1",
    "webpack-cli": "4.3.1"
  }
}
